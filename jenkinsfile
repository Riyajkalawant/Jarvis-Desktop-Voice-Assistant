pipeline {
    agent any
    environment {
        SSH_CRED = 'javacicd'
        REMOTE_USER = 'ubuntu'
        REMOTE_IP = '65.0.87.102'
        REMOTE_DIR = '/home/ubuntu/jarvis'
        GIT_REPO = 'https://github.com/Riyajkalawant/Jarvis-Desktop-Voice-Assistant.git'
    }
    stages {
        stage('Checkout Repo') {
            steps {
                git branch: 'main', credentialsId: SSH_CRED, url: GIT_REPO
            }
        }
        stage('Package & Transfer') {
            steps {
                sshagent([SSH_CRED]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_IP} "mkdir -p ${REMOTE_DIR}"
                        rsync -avz --delete --exclude=.git ./ ${REMOTE_USER}@${REMOTE_IP}:${REMOTE_DIR}/
                    '''
                }
            }
        }
        stage('Remote: Setup & Restart') {
            steps {
                sshagent([SSH_CRED]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_IP} "cd ${REMOTE_DIR} && chmod +x setup_and_restart.sh && ./setup_and_restart.sh"
                    '''
                }
            }
        }
    }
    post {
        success { echo '✅ Deployment Successful!' }
        failure { echo '❌ Deployment Failed!' }
    }
}